<%- include("../layouts/header", {title:"New Task" }) %>

    <%- include("../layouts/menu") %>

        <section class="section">
            <div class="container">
                <h1 class="title size-4">Nova Task</h1>
                <form method="post" action="/checklist/<%= checklisId %>/tasks">
                    <div class=" field">
                        <label class="label">Nome</label>
                        <div class="control">
                            <input class="input" type="text" name="task[name]" placeholder="Lista de Tarefas"
                                value="<%= task.name %>">
                            <% if(task.error && task.erro.hasOwnProperty("name")) { %>
                                <p class="is-danger help">
                                    <%= task.error.name.message %>
                                </p>
                                <% } %>
                        </div>
                    </div>

                    <button type="submit" class="button is-success">Salvar</button>
                    <a href="/checklist/<%= checklisId %>" class="button">Cancelar</a>
                </form>
            </div>
        </section>

        <%- include("../layouts/footer") %>